[templateStart] 
name=copyNumberVariationsDatabase
anchorFile=ApiCommonShared/Model/lib/gbrowse/${projectName}na.conf 
prop=datasetName
prop=datasetDisplayName
prop=datasetDescrip
prop=projectName
prop=sampleName
prop=experimentName
prop=organismAbbrev
prop=organismAbbrevInternal
>templateTextStart<
[${datasetName}${sampleName}:database]
db_adaptor   = Bio::DB::BigWig
db_args      = sub { { -bigwig => $CFG->bigwig_file_path('${organismAbbrev}') . '/${datasetName}/${sampleName}.bw' } }
>templateTextEnd<



[templateStart] 
name=copyNumberVariationsTrack
anchorFile=ApiCommonShared/Model/lib/gbrowse/${projectName}na.conf 
prop=datasetName
prop=datasetDisplayName
prop=datasetDescrip
prop=projectName
prop=sampleName
prop=experimentName
prop=organismAbbrev
prop=organismAbbrevDisplay
>templateTextStart<
[${datasetName}${sampleName}]
feature        = summary
database       = ${datasetName}${sampleName}
glyph          = wiggle_xyplot
bgcolor        = black 
fgcolor        = black
height         = 80
autoscale      = local
scale          = both
restrict       = sub { my $file =  $CFG->bigwig_file_path('${organismAbbrev}') . '/${datasetName}/${sampleName}.bw';
                     if(-e $file) { return 1 } return 0 }
key            = Coverage of DNA resequencing from ${sampleName} aligned against ${organismAbbrevDisplay} and normalised to chromosome copy number (ploidy)
category       = sub { GBrowse::Configuration::getOntologyCategoryFromTrackName(@_, "${organismAbbrevDisplay} : ${datasetDisplayName} : Coverage Normalised to Ploidy") }
citation       = sub {  $CFG->citationFromExtDatabaseNamePattern( '${datasetName}' )."<br><br>This track shows DNA resequencing coverage, normalised to ploidy in 1kb bins.  Zooming to < 20kb will show local min/max values on the y-axis." }
                    

[${datasetName}${sampleName}:20000]
feature        = summary
database       = ${datasetName}${sampleName}
glyph          = wiggle_xyplot
scale          = both
height         = 80
fgcolor        = black
bgcolor        = black
min_score      = 0
max_score      = 4
restrict       = sub { my $file = $CFG->bigwig_file_path('${organismAbbrev}') . '/${datasetName}/${sampleName}.bw';
                     if (-e $file) { return 1 } return 0 }
key            = Coverage of DNA resequencing from ${sampleName} aligned against ${organismAbbrevDisplay} and normalised to chromosome copy number (ploidy)
>templateTextEnd<

