<wdkModel>

  <!-- ==================================================================== -->
  <!-- Params  -->
  <!-- ==================================================================== -->
  <paramSet name="MetricsParams">

    <stringParam name="project_id"
                 prompt="Project"
                 number="false">
      <help>Project</help>
      <suggest default="PlasmoDB"/>
    </stringParam>

    <flatVocabParam name="projectIdSelect"
        queryRef="MetricsVQ.ProjectId"
        prompt="Project"
        multiPick="true"
        displayType="select"
        minSelectedCount="1">
      <help>Select projects</help>
      <suggest selectMode="none"/>
    </flatVocabParam>

  </paramSet>

  <querySet name="MetricsVQ" queryType="vocab" isCacheable="false">

    <sqlQuery name="ProjectId">
      <column name="internal"/>
      <column name="term"/>
      <column name="display"/>
      <sql>
        <![CDATA[
          SELECT distinct project_id as internal, project_id as term, project_id as display
          FROM sfischer.SEARCHESSTATS@USER_DBLINK@
        ]]>
      </sql>
    </sqlQuery>

  </querySet>

</wdkModel>
