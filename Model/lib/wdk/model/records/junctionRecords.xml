            <!-- primary key definition -->
            <primaryKey aliasQueryRef="JunctionAttributes.JunctionAlias">
                <columnRef>intron_feature_id</columnRef>
            </primaryKey>

            <idAttribute name="primary_key" displayName="Intron Junction Id">
                <text>
                    <![CDATA[
                      $$intron_feature_id$$
                    ]]>
                </text>
            </idAttribute>

