<wdkModel>
    <recordClassSet name="PathwayRecordClasses" excludeProjects="EuPathDB">

        <recordClass name="PathwayRecordClass" urlName="pathway" displayName="Metabolic Pathway" shortDisplayName="Pathway"
                     displayNamePlural="Metabolic Pathways">

      <testParamValues>
         <paramValue name="source_id">ec00626</paramValue>
          <paramValue name="project_id">@PROJECT_ID@</paramValue>
      </testParamValues>
            <!-- primary key definition -->
            <primaryKeyAttribute name="primary_key"
                                 displayName="Pathway Id">
                <columnRef>source_id</columnRef>
                <columnRef>project_id</columnRef>
                <text>
                    <![CDATA[
                    $$source_id$$
                    ]]>
                </text>                
            </primaryKeyAttribute>


	    <!-- =============================================================== -->
	    <!--   Reporters -->  
	    <!-- =============================================================== -->
	    
	    <reporter name="tabular" displayName="Tab delimited (Excel): choose from columns"
		      implementation="org.gusdb.wdk.model.report.TabularReporter">
             <property name="page_size">500</property>
          </reporter>

      <reporter name="xml"  displayName="XML: choose from columns and/or tables" 
                    implementation="org.gusdb.wdk.model.report.XMLReporter">
      </reporter>
      <reporter name="json"  displayName="json: choose from columns and/or tables" 
                    implementation="org.gusdb.wdk.model.report.JSONReporter">
      </reporter>
           <!-- =================================================================== -->
           <!--  Attributes  ++++++++-->
           <!-- =================================================================== -->

              <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
              <!-- BFMV attributes -->  
              <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

            <attributeQueryRef ref="PathwayAttributes.Bfmv">
                <columnAttribute name="project_id" internal="true" inReportMaker="false"/>
                <columnAttribute name="source_id" internal="true" inReportMaker="false"/>
                <columnAttribute name="pathway_source" displayName="Pathway Source" internal="false"/>
                <columnAttribute name="description" displayName="Pathway" internal="false"/>
                <columnAttribute name="image_id" displayName="Image_Id" internal="true" inReportMaker="false"/>
                <columnAttribute name="ext_source" displayName="Source" internal="false"/> 
                <columnAttribute name="total_enzyme_count" displayName="Total Pathway Enzymes" internal="false"/> 
                <columnAttribute name="total_compound_count" displayName="Total Pathway Compounds" internal="false"/> 
                <columnAttribute name="url" displayName="URL" internal="true" inReportMaker="false"/>
            </attributeQueryRef>




            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <!-- overview -->  
            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <textAttribute name="overview" displayName="Overview"
                           internal="true" inReportMaker="false">
               <text>
                    <![CDATA[
                    Pathway: 
                   <a href="$$url$$"> $$source_id$$ -  $$description$$</a>
                    ]]>
               </text>
           </textAttribute>

            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <!--compounds table  -->  
            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
         <table name="CompoundsMetabolicPathways"
                 displayName="Metabolic Pathway Reactions"
                 queryRef="PathwayTables.CompoundsFromMetabolicPathways" >
            <columnAttribute displayName="Reaction" name="reaction"/>
            <columnAttribute displayName="EC Number" name="enzyme_link" inReportMaker="false"/>
            <columnAttribute displayName="EC Number" name="enzyme" inReportMaker="true" internal="true"/>
            <columnAttribute displayName="Substrates" name="substrates" />
            <columnAttribute displayName="Products" name="products" />
            <columnAttribute displayName="Reaction Type" name="direction" />
          </table>


         <table name="PathwayGraphs"
                 displayName="Internal Pathway Graphs"
                 queryRef="PathwayTables.PathwayGraphs" >
            <columnAttribute displayName="Display Name" name="display_name" />
            <columnAttribute displayName="Internal" name="internal" />
            <columnAttribute displayName="X axis" name="xaxis_description" />
          </table>



         <table name="ECNumberOrganismMap"
                 displayName="Ec Number Coordinate Map"
                 queryRef="PathwayTables.ECNumberOrganismMap" inReportMaker="false">

            <columnAttribute displayName="source_id" name="source_id"/>
            <columnAttribute displayName="display_label" name="display_label"/>
            <columnAttribute displayName="organisms" name="organisms"/>
            <columnAttribute displayName="genes" name="genes"/>
            <columnAttribute displayName="x1" name="x1"/>
            <columnAttribute displayName="x2" name="x2"/>
            <columnAttribute displayName="y1" name="y1"/>
            <columnAttribute displayName="y2" name="y2"/>
         </table>


         <table name="CompoundLabel"
                 displayName="Compounds Coordinates"
                 queryRef="PathwayTables.CompoundLabel" inReportMaker="false">

            <columnAttribute displayName="project_id" name="project_id"/>
            <columnAttribute displayName="source_id" name="source_id"/>
            <columnAttribute displayName="compound_source_id" name="compound_source_id"/>
            <columnAttribute displayName="display_label" name="display_label"/>
            <columnAttribute displayName="x" name="x"/>
            <columnAttribute displayName="y" name="y"/>
            <columnAttribute displayName="radius" name="radius"/>
         </table>

        </recordClass>

    </recordClassSet>
</wdkModel>

