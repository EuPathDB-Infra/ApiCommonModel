<wdkModel>
    <recordClassSet name="PathwayRecordClasses">

        <recordClass name="PathwayRecordClass" type="Metabolic Pathway" displayName="Metabolic Pathway" shortDisplayName="Pathway">

      <testParamValues>
         <paramValue name="source_id">path:ec00626</paramValue>
         <paramValue name="project_id">PlasmoDB</paramValue>
      </testParamValues>
            <!-- primary key definition -->
            <primaryKeyAttribute name="primary_key"
                                 displayName="Pathway Id">
                <columnRef>source_id</columnRef>
                <columnRef>project_id</columnRef>
                <text>
                    <![CDATA[
                    $$source_id$$
                    ]]>
                </text>                
            </primaryKeyAttribute>




           <!-- =================================================================== -->
           <!--  Attributes  ++++++++-->
           <!-- =================================================================== -->

              <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
              <!-- BFMV attributes -->  
              <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

            <attributeQueryRef ref="PathwayAttributes.Bfmv">
                <columnAttribute name="project_id" internal="true" inReportMaker="false"/>
                <columnAttribute name="source_id" internal="true" inReportMaker="false"/>
                <columnAttribute name="description" displayName="Pathway" internal="false"/>
                <columnAttribute name="image_id" displayName="Image_Id" internal="false"/>
                <columnAttribute name="ext_source" displayName="Source" internal="false"/> 
            </attributeQueryRef>




            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <!-- overview -->  
            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <textAttribute name="overview" displayName="Overview"
                           internal="true" inReportMaker="false">
               <text>
                    <![CDATA[
                    Pathway:  $$source_id$$ from $$ext_source$$.<br><br>
                    $$description$$
                    ]]>
               </text>
           </textAttribute>

            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
            <!--compounds table  -->  
            <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
         <table name="CompoundsMetabolicPathways"
                 displayName="Compounds Associated via Metabolic Pathways"
                 queryRef="PathwayTables.CompoundsFromMetabolicPathways" includeProjects="PlasmoDB">
            <columnAttribute displayName="Compound" name="compound"  inReportMaker="true" internal="true"/>
            <columnAttribute displayName="EC Number" name="enzyme"/>
            <columnAttribute displayName="Reaction" name="reaction" inReportMaker="true" internal="true"/>
            <columnAttribute displayName="Name" name="name" inReportMaker="false" internal="true"/>
            <linkAttribute name="coumpound_link" displayName="Compound" inReportMaker="false">
                 <displayText>
                    <![CDATA[
                    $$compound$$
                    ]]>
                 </displayText>
                <url>
                    <![CDATA[showRecord.do?name=CompoundRecordClasses.CompoundRecordClass&source_id=$$compound$$&project_id=@PROJECT_ID@]]>
                </url>
            </linkAttribute>
            <linkAttribute name="reaction_link" displayName="Reaction" inReportMaker="false">
                 <displayText>
                    <![CDATA[
                    $$reaction$$
                    ]]>
                 </displayText>
                <url>
                    <![CDATA[
                    http://www.genome.jp/dbget-bin/www_bget?$$reaction$$
                    ]]>
                </url>
            </linkAttribute>
            <columnAttribute displayName="Source" name="source" />
          </table>

        </recordClass>

    </recordClassSet>
</wdkModel>

