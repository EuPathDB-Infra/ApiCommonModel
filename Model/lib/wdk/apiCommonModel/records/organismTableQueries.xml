<wdkModel>

  <querySet name="OrganismTables" queryType="table" isCacheable="false" includeProjects="AmoebaDB,CryptoDB,GiardiaDB,MicrosporidiaDB,PiroplasmaDB,PlasmoDB,ToxoDB,TriTrypDB,EuPathDB">

      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
      <!-- Organism table query  -->  
      <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

      <sqlQuery name="Metrics" >
            <column name="project_id"/>
            <column name="source_id"/> 
            <column name="strain"/>
            <column name="taxon"/>
            <column name="genome_source"/>
            <column name="organism"/>
            <sql>
            <![CDATA[
SELECT o.strain_abbrev as strain, 
   o.taxon_id as taxon,
   o.genome_source ,
   o.project_name as source_id,
   tn.name as organism,
   '@PROJECT_ID@' as project_id
FROM apidb.organism o , sres.taxonname tn
WHERE
  o.taxon_id = tn.taxon_id
            ]]>
            </sql>
        </sqlQuery> 
   </querySet>
</wdkModel>
