<wdkModel>

  <questionSet name="OrganismQuestions" includeProjects="AmoebaDB,CryptoDB,GiardiaDB,MicrosporidiaDB,PiroplasmaDB,PlasmoDB,ToxoDB,TriTrypDB,EuPathDB"
               displayName="Search for Organisms">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Isolate by Product -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="AllOrganisms"
              searchCategory="Other Attributes"
              displayName="Get All Organism"
              shortDisplayName="Organism"
              queryRef="OrganismIds.AllOrganisms"
              recordClassRef="OrganismRecordClasses.OrganismRecordClass">

      <attributesList
           summary="genus, species, strain, ncbi_taxon, genome_source, megabps, genecount, arraygenecount,isOrganellar, hasIsolate, hasHTSIsolate, hasSNP, hasChipChip, hasEST, arraygenecount, hasRNASeq, hasSageTag, hasProteomics" sorting="genus asc, species asc, strain desc"
      />

      <dynamicAttributes>
         <columnAttribute name="strain" displayName="Strain" align="center"/>
         <columnAttribute name="genome_source" displayName="Data Source" align="center"/>
         <columnAttribute name="organism" displayName="Organism" align="center"/>
         <columnAttribute name="genus" displayName="Genus" align="center"/>
         <columnAttribute name="species" displayName="Species" align="center"/>
         <columnAttribute name="genecount" displayName="Genes" align="center"/>
         <columnAttribute name="arraygenecount" displayName="Genes w/ Microarrays" align="center"/>
         <columnAttribute name="megabps" displayName="Megabase Pairs" align="center"/> 
         <columnAttribute name="isOrganellar_flag" internal="true"/>
         <textAttribute name="isOrganellar" displayName="Organellar" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$isOrganellar_flag$$" src="/assets/images/reddot.gif" style="display:$$isOrganellar_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasChipChip_flag" internal="true"/>
         <textAttribute name="hasChipChip" displayName="ChIP-chips" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasChipChip_flag$$" src="/assets/images/reddot.gif" style="display:$$hasChipChip_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasRNASeq_flag" internal="true"/>
         <textAttribute name="hasRNASeq" displayName="RNA-Seqs" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasRNASeq_flag$$" src="/assets/images/reddot.gif" style="display:$$hasRNASeq_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasSageTag_flag" internal="true"/>
         <textAttribute name="hasSageTag" displayName="Sage Tags" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasSageTag_flag$$" src="/assets/images/reddot.gif" style="display:$$hasSageTag_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasEST_flag" internal="true"/>
         <textAttribute name="hasEST" displayName="ESTs" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasEST_flag$$" src="/assets/images/reddot.gif" style="display:$$hasEST_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasSNP_flag" internal="true"/>
         <textAttribute name="hasSNP" displayName="SNPs" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasSNP_flag$$" src="/assets/images/reddot.gif" style="display:$$hasSNP_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasProteomics_flag" internal="true"/>
         <textAttribute name="hasProteomics" displayName="Proteomics" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasProteomics_flag$$" src="/assets/images/reddot.gif" style="display:$$hasProteomics_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasIsolate_flag" internal="true"/>
         <textAttribute name="hasIsolate" displayName="Isolates" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasIsolate_flag$$" src="/assets/images/reddot.gif" style="display:$$hasIsolate_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="hasHTSIsolate_flag" internal="true"/>
         <textAttribute name="hasHTSIsolate" displayName="HTS Isolates" align="center">
           <text>
            <![CDATA[
              <img width="8" border="0" alt="$$hasHTSIsolate_flag$$" src="/assets/images/reddot.gif" style="display:$$hasHTSIsolate_flag$$"/>
            ]]>
          </text>
        </textAttribute> 
         <columnAttribute name="ncbi_tax_id" internal="true"/>
         <linkAttribute name="ncbi_taxon" displayName="Taxon ID" align="center">
           <displayText>
             <![CDATA[
               $$ncbi_tax_id$$
             ]]>
           </displayText>
           <url>
             <![CDATA[
              http://www.ncbi.nlm.nih.gov/Taxonomy/Browser/wwwtax.cgi?id=$$ncbi_tax_id$$
             ]]>
           </url>
          </linkAttribute>
       </dynamicAttributes>

       <summary> 
This search allows you to identify organism by its name.
       </summary> 
       <description> 
       <![CDATA[ 
This search allows you to identify organisms based on the name of the organism.
       ]]> 
       </description> 
     </question>

  </questionSet> 
</wdkModel>
