<wdkModel>

  <questionSet name="OrganismQuestions" includeProjects="AmoebaDB,CryptoDB,GiardiaDB,MicrosporidiaDB,PiroplasmaDB,PlasmoDB,ToxoDB,TriTrypDB,EuPathDB"
               displayName="Search for Organisms">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Isolate by Product -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="AllOrganisms"
              searchCategory="Other Attributes"
              displayName="Get All Organism"
              shortDisplayName="Organism"
              queryRef="OrganismIds.AllOrganisms"
              recordClassRef="OrganismRecordClasses.OrganismRecordClass">

      <attributesList
           summary="genus, species, strain, ncbi_taxon, genome_source, megabps, genecount, isOrganellar, hasIsolate, hasHTSIsolate, hasSNP, hasChipChip, hasEST, arraygenecount, hasRNASeq, hasSageTag, hasProteomics" sorting="genus asc, species asc, strain desc"
      />

      <dynamicAttributes>
         <columnAttribute name="strain" displayName="Strain" align="center"/>
         <columnAttribute name="genome_source" displayName="Data Source" align="center"/>
         <columnAttribute name="organism" displayName="Organism" align="center"/>
         <columnAttribute name="genus" displayName="Genus" align="center"/>
         <columnAttribute name="species" displayName="Species" align="center"/>
         <columnAttribute name="genecount" displayName="Gene Count" align="center"/>
         <columnAttribute name="arraygenecount" displayName="Gene w/ Microarray" align="center"/>
         <columnAttribute name="isOrganellar" displayName="Organellar" align="center"/>
         <columnAttribute name="hasChipChip" displayName="ChIP Chip" align="center"/>
         <columnAttribute name="hasRNASeq" displayName="RNASeq" align="center"/>
         <columnAttribute name="hasSageTag" displayName="Sage Tag" align="center"/>
         <columnAttribute name="hasEST" displayName="EST" align="center"/>
         <columnAttribute name="hasSNP" displayName="SNP" align="center"/>
         <columnAttribute name="megabps" displayName="Megabase Pairs" align="center"/>
         <columnAttribute name="hasProteomics" displayName="Proteomics" align="center"/>
         <columnAttribute name="hasIsolate" displayName="Isolates" align="center"/>
         <columnAttribute name="hasHTSIsolate" displayName="HTS Isolates" align="center"/>
         <columnAttribute name="ncbi_tax_id" internal="true"/>
         <linkAttribute name="ncbi_taxon" displayName="Taxon ID" align="center">
           <displayText>
             <![CDATA[
               $$ncbi_tax_id$$
             ]]>
           </displayText>
           <url>
             <![CDATA[
              http://www.ncbi.nlm.nih.gov/Taxonomy/Browser/wwwtax.cgi?id=$$ncbi_tax_id$$
             ]]>
           </url>
          </linkAttribute>
       </dynamicAttributes>

       <summary> 
This search allows you to identify organism by its name.
       </summary> 
       <description> 
       <![CDATA[ 
This search allows you to identify organisms based on the name of the organism.
       ]]> 
       </description> 
     </question>

  </questionSet> 
</wdkModel>
