<wdkModel>

  <questionSet name="CompoundQuestions" displayName="Search for Compounds"
	       includeProjects="PlasmoDB,EuPathDB">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Id -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByCompoundID"  
              displayName="Compound ID"
              shortDisplayName="Compound ID"
              queryRef="CompoundIds.CompoundsByCompoundID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

             <attributesList 
               summary="substance_id,synonyms"
             />
             <summary>
             Find Compounds by PubChem compound IDs and/or KEGG compound IDs.
             </summary>

	     <description>
	       <![CDATA[
             Find Compounds by PubChem Compound IDs and/or KEGG Compound IDs.
	       ]]>
	     </description>
    </question>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compounds By EC Number -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByEcReaction"  
	      displayName="Enzyme-catalysed Reactions"
	      shortDisplayName="EC Reaction"
              queryRef="CompoundIds.CompoundsByEcReaction" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,ec_number,substance_id,synonyms"
	  />
      <summary>
	Find Compounds by enzymes that catalyse reactions.
      </summary>

      <description>
	<![CDATA[
		 Find Compounds by enzymes that catalyse reactions.
	]]>
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
	<columnAttribute name="ec_number" displayName="EC Number" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>



    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compound By Metabolic Pathway -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByPathway"  
	      displayName="Metabolic Pathway"
	      shortDisplayName="Pathway"
              queryRef="CompoundIds.CompoundsByPathway" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,substance_id,synonyms"
	  />
      <summary>
	Find Compounds by Metabolic Pathway
      </summary>

      <description>
	Find Compounds by Metabolic Pathway
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>


    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Molecular Weight -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByMolecularWeight"  
	      displayName="Molecular Weight"
	      shortDisplayName="Molecular Wt"
              queryRef="CompoundIds.CompoundsByMolecularWeight" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      <attributesList 
	  summary="substance_id,synonyms,molecular_wt"
	  />
      <summary>
	Find Compounds with molecular weight in a range that you specify.
      </summary>

      <description>
	Find Compounds with molecular weight in a range that you specify.
      </description>

      <dynamicAttributes>
	<columnAttribute name="molecular_wt" displayName="Molecular Weight" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>


    <!-- ************************************************************ -->
    <!-- Transform : Compounds By Gene ID -->  
    <!-- ************************************************************ -->
    <question name="CompoundsByGeneID"  
              displayName="Tranform to Compounds"
              shortDisplayName="genes->cmpds"
              queryRef="CompoundIds.CompoundsByGeneID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      
      <attributesList 
	  summary="substance_id,synonyms,gene_count,genes"
	  />

      <summary>
	Find Compounds by Gene ID
      </summary>
      
      <description>
	 <![CDATA[
	  Find Compounds by Gene ID
	  ]]>
      </description>
      
      <dynamicAttributes>
        <columnAttribute name="genes" displayName="Genes Transformed"  internal="true" align="center"/>
        <columnAttribute name="gene_count" displayName="No. of Genes" internal="true" align="center"/>
      </dynamicAttributes>
      
    </question>
      


    <!-- ************************************************************ -->
    <!-- Transform : Compounds By Pathways -->  
    <!-- ************************************************************ -->
    <question name="CompoundsByPathwayID"  
              displayName="Tranform to Compounds"
              shortDisplayName="pthwy->cmpds"
              queryRef="CompoundIds.CompoundsByPathwayID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      
      <attributesList 
	  summary="substance_id,synonyms,pathway_count"
          sorting="pathway_count desc"
	  />

      <summary>
      Transform Pathways to Compounds
      </summary>
      
      <description>
	 <![CDATA[
      Transform Pathways to Compounds
	  ]]>
      </description>

         </question>
      


  </questionSet>

</wdkModel>
