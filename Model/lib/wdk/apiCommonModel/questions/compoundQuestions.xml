<wdkModel>

  <questionSet name="CompoundQuestions" displayName="Search for Compounds"
	       includeProjects="PlasmoDB,EuPathDB">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Id -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByCompoundID"  
              displayName="Compound ID"
              shortDisplayName="Compound ID"
              queryRef="CompoundIds.CompoundsByCompoundID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

             <attributesList 
               summary="substance_id"
             />
             <summary>
             Find Compounds by Compound ID
             </summary>

	     <description>
	       <![CDATA[
             Find Compounds by Compound ID
	       ]]>
	     </description>
    </question>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compound By Gene ID -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByGeneID"  
	      displayName="Gene ID"
	      shortDisplayName="Gene ID"
              queryRef="CompoundIds.CompoundsByGeneID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,enzyme,reaction"
	  />
      <summary>
	Find Compounds by Gene ID
      </summary>

      <description>
	<![CDATA[
		 Find Compounds by Gene ID
	]]>
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
	<columnAttribute name="enzyme" displayName="EC number" align="center" inReportMaker="false"/>
	<columnAttribute name="reaction" displayName="Reaction" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>



    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compound By Metabolic Pathway -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByPathway"  
	      displayName="Metabolic Pathway"
	      shortDisplayName="Pathway"
              queryRef="CompoundIds.CompoundsByPathway" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,subst_id"
	  />
      <summary>
	Find Compounds by Metabolic Pathway
      </summary>

      <description>
	Find Compounds by Metabolic Pathway
      </description>

      <dynamicAttributes>
	<columnAttribute name="subst_id" displayName="PubChem Substance ID" align="center" inReportMaker="false"/>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>

    
  </questionSet>

</wdkModel>
