<wdkModel>

  <questionSet name="CompoundQuestions" displayName="Search for Compounds"
	       excludeProjects="EuPathDB">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Id -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByCompoundID" newBuild="17" 
              displayName="Compound ID"
              shortDisplayName="Compound ID"
              queryRef="CompoundIds.CompoundsByCompoundID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

             <attributesList 
               summary="name,synonyms"
             />
             <summary>
             Find Compounds by PubChem compound IDs and/or KEGG compound IDs.
             </summary>

	     <description>
	       <![CDATA[
             Find Compounds by PubChem Compound IDs and/or KEGG Compound IDs.
	       ]]>
	     </description>
    </question>


    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Text Search -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByTextSearch" newBuild="17" 
              displayName="Text (synonym, InChI, etc.)"
              shortDisplayName="Text"
              queryRef="CompoundIds.CompoundsByTextSearch" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

             <attributesList 
               summary="name,synonyms, fields_matched, max_score"
             />
             <summary>
             Find Compounds with a text search against their synonym, InChI, IUPAC Name or KEGG ID, or an associated enzyme, Reaction or Pathway.
             </summary>

	     <description>
	       <![CDATA[
             Find Compounds with a text search against their synonym, InChI, IUPAC Name or KEGG ID, or an associated enzyme, Reaction or Pathway.
	       ]]>
	     </description>
	     <dynamicAttributes>
	       <columnAttribute name="fields_matched"
				displayName="Found in" align="center"/>
	       <columnAttribute name="max_score"
				displayName="Score" align="center"/>
	     </dynamicAttributes>
    </question>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compounds By EC Number -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByEcReaction" newBuild="17" 
	      displayName="Enzymes"
	      shortDisplayName="Enzymes"
              queryRef="CompoundIds.CompoundsByEcReaction" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,ec_number,name,synonyms"
	  />
      <summary>
	Find Compounds by enzymes that catalyse reactions.
      </summary>

      <description>
	<![CDATA[
		 Find Compounds by enzymes that catalyse reactions.
	]]>
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
	<columnAttribute name="ec_number" displayName="EC Number" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>



    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compound By Metabolic Pathway -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByPathway" newBuild="17" 
	      displayName="Metabolic Pathway"
	      shortDisplayName="Pathway"
              queryRef="CompoundIds.CompoundsByPathway" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="name,synonyms"
	  />
      <summary>
	Find Compounds by Metabolic Pathway
      </summary>

      <description>
	Find Compounds by Metabolic Pathway
      </description>
    </question>


    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Molecular Weight -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByMolecularWeight" newBuild="17" 
	      displayName="Molecular Weight"
	      shortDisplayName="Molecular Wt"
              queryRef="CompoundIds.CompoundsByMolecularWeight" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      <attributesList 
	  summary="name,synonyms,molecular_wt"
	  />
      <summary>
	Find Compounds with molecular weight in a range that you specify.
      </summary>

      <description>
	Find Compounds with molecular weight in a range that you specify.
      </description>

      <dynamicAttributes>
	<columnAttribute name="molecular_wt" displayName="Molecular Weight" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Molecular Formula -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByMolecularFormula" newBuild="17" 
	      displayName="Molecular Formula"
	      shortDisplayName="Mol formula"
              queryRef="CompoundIds.CompoundsByMolecularFormula" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      <attributesList 
	  summary="name,synonyms,molecular_formula"
	  />
      <summary>
	Find Compounds with molecular formula.
      </summary>

      <description>
	Find Compounds with molecular formula.
      </description>

      <dynamicAttributes>
	<columnAttribute name="molecular_formula" displayName="Molecular Formula" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>


    <!-- ************************************************************ -->
    <!-- Transform : Compounds By Gene ID -->  
    <!-- ************************************************************ -->
    <question name="CompoundsByGeneID" newBuild="17" 
              displayName="Tranform to Compounds"
              shortDisplayName="gene->cpd"
              queryRef="CompoundIds.CompoundsByGeneID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      
      <attributesList 
	  summary="name,synonyms,gene_count,genes"
	  />

      <summary>
	Find Compounds by Gene ID
      </summary>
      
      <description>
	 <![CDATA[
	  Find Compounds by Gene ID
	  ]]>
      </description>
      
      <dynamicAttributes>
        <columnAttribute name="genes" displayName="Genes Transformed"  internal="true" align="center"/>
        <columnAttribute name="gene_count" displayName="No. of Genes" internal="true" align="center"/>
      </dynamicAttributes>
      
    </question>
      


    <!-- ************************************************************ -->
    <!-- Transform : Compounds By Pathways -->  
    <!-- ************************************************************ -->
    <question name="CompoundsByPathwayID" newBuild="17" 
              displayName="Tranform to Compounds"
              shortDisplayName="pthwy->cpd"
              queryRef="CompoundIds.CompoundsByPathwayID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      
      <attributesList 
	  summary="name,synonyms,pathway_count"
          sorting="pathway_count desc"
	  />

      <summary>
      Transform Pathways to Compounds
      </summary>
      
      <description>
	 <![CDATA[
      Transform Pathways to Compounds
	  ]]>
      </description>

    </question>


    <question name="CompoundsByFoldChange"  newBuild="17" 
              includeProjects="PlasmoDB"
              displayName="Metabolite levels"
              shortDisplayName="fold change"
              queryRef="CompoundIds.CompoundsByFoldChange" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass">
        <summary>
            Find compounds by metabolite levels
        </summary>
        <attributesList 
              summary="name,synonyms,fold_change"
        /> 
        <description>
            <![CDATA[
Find compounds with variation in metabolite levels. Note that when the compound has multiple isotopomers, the metabolite isotopomers levels were summed. <br>
In the experiment infected RBCs, isolated parasites, and uninfected RBCs were incubated for 4 hours in RPMI containing U-<sup>13</sup> C glutamine at pH 6.4, 7.4, and 8.4. Extracts were analyzed by mass spectrometry. The effect of pH on steady-state metabolite levels and glutamine metabolism was measured.

<br /><br />
<b>Warning: all metabolite assignments provided in this alpha release should be treated as preliminary.</b>
            ]]>
        </description>
	<dynamicAttributes>
	     <columnAttribute name="fold_change" displayName="Fold Change" align="center"/>
	</dynamicAttributes>
    </question>


  </questionSet>

</wdkModel>
