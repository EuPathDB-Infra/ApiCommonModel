<wdkModel>

  <questionSet name="CompoundQuestions" displayName="Search for Compounds"
	       includeProjects="PlasmoDB,EuPathDB">

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Id -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByCompoundID"  
              displayName="Compound ID"
              shortDisplayName="Compound ID"
              queryRef="CompoundIds.CompoundsByCompoundID" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

             <attributesList 
               summary="substance_id,synonyms"
             />
             <summary>
             Find Compounds by Compound ID
             </summary>

	     <description>
	       <![CDATA[
             Find Compounds by Compound ID
	       ]]>
	     </description>
    </question>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compounds By EC Number -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByEcNumber"  
	      displayName="Pathway Reaction"
	      shortDisplayName="EC Number"
              queryRef="CompoundIds.CompoundsByEcNumber" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,ec_number,substance_id,synonyms"
	  />
      <summary>
	Find Compounds by Enzyme Commission (EC) number.
      </summary>

      <description>
	<![CDATA[
		 Find Compounds by Enzyme Commission (EC) number.
	]]>
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
	<columnAttribute name="ec_number" displayName="EC Number" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>



    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Compound By Metabolic Pathway -->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByPathway"  
	      displayName="Metabolic Pathway"
	      shortDisplayName="Pathway"
              queryRef="CompoundIds.CompoundsByPathway" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">

      <attributesList 
	  summary="compound,substance_id,synonyms"
	  />
      <summary>
	Find Compounds by Metabolic Pathway
      </summary>

      <description>
	Find Compounds by Metabolic Pathway
      </description>

      <dynamicAttributes>
	<columnAttribute name="compound" displayName="Compound" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>


    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- Molecular Weight -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="CompoundsByMolecularWeight"  
	      displayName="Molecular Weight"
	      shortDisplayName="Molecular Wt"
              queryRef="CompoundIds.CompoundsByMolecularWeight" 
              recordClassRef="CompoundRecordClasses.CompoundRecordClass"
              noSummaryOnSingleRecord="true">
      <attributesList 
	  summary="substance_id,synonyms,molecular_wt"
	  />
      <summary>
	Find Compounds with molecular weight in a range that you specify.
      </summary>

      <description>
	Find Compounds with molecular weight in a range that you specify.
      </description>

      <dynamicAttributes>
	<columnAttribute name="molecular_wt" displayName="Molecular Weight" align="center" inReportMaker="false"/>
      </dynamicAttributes>

    </question>

  </questionSet>

</wdkModel>
