<wdkModel>

  <!--===========================================================================-->
  <!-- Dynamic Span   ID questions (public)  -->
  <!--===========================================================================-->

  <questionSet name="DynSpanQuestions" displayName="Search for Dynamic Spans">


  <!-- ************************************************************ -->
    <!-- SourceId                               -->  
    <!-- ************************************************************ -->
    
    <question name="DynSpansBySourceId" 
      displayName="Dynamic Span ID(s)" 
      shortDisplayName="Dyn Span IDs" 
      queryRef="DynSpanId.DynSpansBySourceId" 
      recordClassRef="DynSpanRecordClasses.DynSpanRecordClass"  
      noSummaryOnSingleRecord="true"  excludeProjects="EuPathDB">
         
        <attributesList 
         summary="organism,geneCount"
         sorting="organism asc,geneCount desc"
        />

      
      <summary>
        Find dynamic genomic spans by ID.
      </summary>

      <description>
           Access your favorite dynamic spans by ID. Either enter the ID list manually, 
           or upload a file that contains the list. IDs can be delimited by a comma, 
           a semi colon, or any white spaces. 
      </description>

    </question>

<!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!-- Location -->  
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="DynSpansByLocation"
         displayName="Genomic Location"
         shortDisplayName="Genomic Loc"
         queryRef="DynSpanId.DynSpansByLocation"
         recordClassRef="DynSpanRecordClasses.DynSpanRecordClass"
         noSummaryOnSingleRecord="false"  excludeProjects="EuPathDB">

       <attributesList 
         summary="organism,geneCount,orfCount,snpCount,sagetagCount,estCount"
         sorting="organism asc"
        />

        <summary>
                 Enter a genomic sequence and coordinates to access a span record page.
        </summary>

        <description>
           <![CDATA[
                   Enter a genomic sequence and coordinates to access a span record page.
           ]]>
        </description>

 </question>


 <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
  <!-- DNA Motif search -->
  <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

    <question name="DynSpansByMotifSearch"
         displayName="DNA Motif Pattern"
         shortDisplayName="DNA Motif"
         category="Similarity/Pattern"
         queryRef="DynSpanId.DynSpansByMotifSearch"
         recordClassRef="DynSpanRecordClasses.DynSpanRecordClass">

        <attributesList 
         summary="organism,geneCount"
         sorting="organism asc,geneCount desc"
        />

          <summary>
             <![CDATA[
              Find genomic spans whose DNA contains a motif pattern that you specify.
              ]]>
         </summary>
         <description>
           <![CDATA[
              Find genomic spans whose DNA contains a motif pattern that you specify.
              <br><br>
             Specify the pattern with a (Perl style) "regular expression".
             For a description of how to create regular expressions,
             please see the <a href="regexp.jsp">Regular Expression Tutorial</a>.
             <br><br>
             ]]>
         </description>

         <dynamicAttributes>
           <columnAttribute name="Locations" displayName="Match Locations" align="center"/>
           <columnAttribute name="MatchCount" displayName="Match Count" align="center"/>
           <columnAttribute name="Sequence" inReportMaker="false" truncateTo="4000"/>
         </dynamicAttributes>
 
        <propertyList name="specificAttribution">
        </propertyList>
    </question>


</questionSet>

</wdkModel>



