<wdkModel>
    
  <!-- ==================================================================== -->
  <!-- Params  -->
  <!-- ==================================================================== -->
  <paramSet name="SpanParams">


 <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- dataset param for dynspans by ID  -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

     <datasetParam name="span_id" recordClassRef="DynSpanRecordClasses.DynSpanRecordClass" 
             prompt="Genomic Segment ID">

         <help includeProjects="EuPathDB">
           Enter an identifier for a genomic sequence. The IDs correspond to the accession numbers in the GenBank records supplied by the sequencing centers. Wild cards are permitted in most queries, i.e. use AAEE* to ask for all &lt;i&gt; C.parvum &lt;/i&gt; contigs. Genes By Chromosomal Location does not allow wildcards.
	 </help>

         <help includeProjects="FungiDB,HostDB,InitDB,PiroplasmaDB">
           FILL
	 </help>

	 <help includeProjects="TrichDB">
           Enter an identifier for a genomic sequence. The IDs correspond to the accession numbers in the GenBank records supplied by the sequencing centers. Wild cards are permitted in most queries, i.e. use DS11* to ask for all contigs that have identifiers that begin with DS11.
         </help>
         <help includeProjects="GiardiaDB">
           Enter an identifier for a genomic sequence. The IDs correspond to the accession numbers in the GenBank records supplied by the sequencing centers. Wild cards are permitted in most queries, i.e. use AACB0200* to ask for all contigs/scaffolds that have identifiers that begin with AACB0200. 
         </help>
         <help includeProjects="CryptoDB">
             Enter an identifier for a genomic contig. The IDs
             correspond to the accession numbers in the GenBank records
             supplied by the sequencing centers. Contig ID's from
             &lt;i&gt; C. parvum &lt;/i&gt; whole genome sequencing
             project begin with 'AAEE' and contig ID's for &lt;i&gt;
             C. hominis &lt;/i&gt; begin with 'AAEL'. The &lt;i&gt;
             C. parvum &lt;/i&gt; Chromosome 6 independently sequenced
             at MRC-LMB  before the whole genome project was completed
             is 'BX526834 '. Wild cards are permitted  in most queries,
             i.e. use AAEE* to ask for all &lt;i&gt; C. parvum
             &lt;/i&gt; contigs. 
         </help>
         <help includeProjects="PlasmoDB">
             Sequence IDs for &#60;i&#62; P. falciparum &#60;/i&#62; chromosomes are 'Pf3D7_01' through 'Pf3D7_14.'  Sequence IDs for &#60;i&#62; P. yoelii &#60;/i&#62; sequences begin with 'AABL'.  Sequence IDs for &#60;i&#62; P. vivax &#60;/i&#62; chromosomes begin with 'CM', while the contigs begin with 'AAK' or 'AY'. Sequence IDs of &#60;i&#62; P. chabaudi &#60;/i&#62; chromosomes start with 'chab', while the contigs begin with 'contig'. &#60;i&#62;P.knowlesi &#60;/i&#62; chromosome sequences start with 'PK' or 'chr'. &#60;i&#62;P. berghei &#60;/i&#62; sequences start with 'PB',  &#60;i&#62;P.reichenowi &#60;/i&#62; sequence start with 'Pr', while those of &#60;i&#62;P.gallinaceum &#60;/i&#62; start with 'Pg'. Wild cards are permitted  in most queries, i.e. use 'AABL*' to ask for all &#60;i&#62; P. yoelii &#60;/i&#62; sequences. Genes By Chromosomal Location does not allow wildcards.
         </help>
         <suggest includeProjects="EuPathDB"
             default="AAEL01000057,VIIb,Pf3D7_04_v3,DS113177"/>
         <suggest includeProjects="FungiDB,HostDB,InitDB,PiroplasmaDB"
             default="(Example: )"
             allowEmpty="true"
             emptyValue="No Match"/>
         <suggest includeProjects="AmoebaDB"
             default="EINV_674"
             allowEmpty="true"
             emptyValue="No Match"/>
         <suggest includeProjects="MicrosporidiaDB"
             default="ECIII_CH04"
             allowEmpty="true"
             emptyValue="No Match"/>
         <suggest includeProjects="CryptoDB"
             default="AAEE01000006"
             allowEmpty="true"
             emptyValue="No Match"/>
         <suggest includeProjects="ToxoDB"
             default="(Examples: Ia, TGG_994746)"
             allowEmpty="true"
             emptyValue="No Match"/>
         <suggest includeProjects="PlasmoDB"
             default="(Examples: Pf3D7_04_v3, berg12)"
             allowEmpty="true"
             emptyValue="No Match"/>     
         <suggest includeProjects="GiardiaDB"
             default="GLCHR05"/>     
         <suggest includeProjects="TrichDB"
             default="DS113177"/>     
         <suggest includeProjects="TriTrypDB"
             default="Lmjchr36"/>     

        <parser name="gff" implementation="org.apidb.apicommon.model.param.GffSpanDatasetParser">
        </parser>
        
    </datasetParam>
 

        
        
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!-- params for span logic operations -->
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

        
        <stringParam name="span_sentence"
                     prompt="sentence" number="false">
            <help>The span sentence for param display</help>
        </stringParam>

        <enumParam 	name="span_operation" 
					prompt="Span Operation"
					multiPick="false">
          <help>The Span Operation</help>
          <enumList>   
            <enumValue default="true">
              <display>overlaps</display>
               <term>overlap</term>
              <internal>overlap</internal>
            </enumValue>
            <enumValue>
              <display>contains</display>
               <term>a_contain_b</term>
              <internal>a_contain_b</internal>
            </enumValue>
            <enumValue>
              <display>is contained in</display>
               <term>b_contain_a</term>
              <internal>b_contain_a</internal>
            </enumValue>
           </enumList>   
        </enumParam>

        
        <enumParam 	name="span_strand" 
					prompt="Select strand"
					multiPick="false">
          <help>Select the strand(s) where the feature is located.</help>
          <enumList>   
            <enumValue default="true">
              <display>either strand</display>
              <term>Both strands</term>
              <internal>both_strands</internal>
            </enumValue>
            <enumValue>
              <term>same strand</term>
              <internal>same_strand</internal>
            </enumValue>
            <enumValue>
              <term>opposite strand</term>
              <internal>opposite_strands</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        
        <enumParam
                   name="region_a" 
 		   prompt="Region for Set A"
		   multiPick="false">
          <help>The desired region for set A</help>
          <enumList>   
            <enumValue default="true">
              <display>Exact</display>
              <term>exact</term>
              <internal>exact</internal>
            </enumValue>
            <enumValue>
              <display>Upstream</display>
              <term>upstream</term>
              <internal>upstream</internal>
            </enumValue>
            <enumValue>
              <display>Downstream</display>
              <term>downstream</term>
              <internal>downstream</internal>
            </enumValue>
            <enumValue>
              <display>Custom</display>
              <term>custom</term>
              <internal>custom</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        <enumParam
                   name="region_b" 
 		   prompt="Region for Set B"
		   multiPick="false">
          <help>The desired region for set B</help>
          <enumList>   
            <enumValue default="true">
              <display>Exact</display>
              <term>exact</term>
              <internal>exact</internal>
            </enumValue>
            <enumValue>
              <display>Upstream</display>
              <term>upstream</term>
              <internal>upstream</internal>
            </enumValue>
            <enumValue>
              <display>Downstream</display>
              <term>downstream</term>
              <internal>downstream</internal>
            </enumValue>
            <enumValue>
              <display>Custom</display>
              <term>custom</term>
              <internal>custom</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        <enumParam 	name="span_output" 
					prompt="Span Output Type"
					multiPick="false">
          <help>The Span Operation</help>
          <enumList>   
            <enumValue default="true">
              <display>select...</display>
              <term>none</term>
              <internal>none</internal>
            </enumValue>   
            <enumValue>
              <display>Current result</display>
              <term>a</term>
              <internal>a</internal>
            </enumValue>
            <enumValue>
              <display>New step</display>
              <term>b</term>
              <internal>b</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        <answerParam name="span_a" prompt="Input result A of Span Logic" readonly="true" visible="false">
              <help>Select a result set as the input A of the Span Logic operation</help>
              <recordClass ref="GeneRecordClasses.GeneRecordClass" />
              <recordClass ref="OrfRecordClasses.OrfRecordClass" excludeProjects="HostDB"/>
              <recordClass ref="SnpRecordClasses.SnpRecordClass" includeProjects="ToxoDB,PlasmoDB,EuPathDB,CryptoDB,AmoebaDB,TriTrypDB" />
              <recordClass ref="IsolateRecordClasses.IsolateRecordClass" excludeProjects="FungiDB,TrichDB,HostDB" />
              <recordClass ref="DynSpanRecordClasses.DynSpanRecordClass" />
<!--              <recordClass ref="SageTagRecordClasses.SageTagRecordClass" includeProjects="PlasmoDB,GiardiaDB,TriTrypDB,ToxoDB" /> -->
        </answerParam>

        
        <enumParam name="span_begin_a" prompt="begins at">
          <help>The anchor of the begin location</help>
          <enumList>   
            <enumValue default="true">
              <term>start</term>
              <internal>start</internal>
            </enumValue>
            <enumValue>
              <term>stop</term>
              <internal>stop</internal>
            </enumValue>
          </enumList>   
        </enumParam>
        
        <enumParam name="span_end_a" prompt="ends at">
          <help>The anchor of the end location</help>
          <enumList>   
            <enumValue>
              <term>start</term>
              <internal>start</internal>
            </enumValue>
            <enumValue default="true">
              <term>stop</term>
              <internal>stop</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        
        <enumParam name="span_begin_direction_a" prompt="direction">
          <help>direction from the begin location</help>
          <enumList>   
            <enumValue default="true">
              <term>+</term>
              <internal>+</internal>
            </enumValue>
            <enumValue>
              <term>-</term>
              <internal>-</internal>
            </enumValue>
          </enumList>   
        </enumParam>
        
        <enumParam name="span_end_direction_a" prompt="direction">
          <help>direction from the end location</help>
          <enumList>   
            <enumValue default="true">
              <term>+</term>
              <internal>+</internal>
            </enumValue>
            <enumValue>
              <term>-</term>
              <internal>-</internal>
            </enumValue>
          </enumList>   
        </enumParam>


        <stringParam name="span_begin_offset_a"
                     prompt="begin offset" number="true">
            <help>The offset from the begin</help>
            <suggest default="0"/>
        </stringParam>

        <stringParam name="span_end_offset_a"
                     prompt="end offset" number="true">
            <help>The offset from the begin</help>
            <suggest default="0"/>
        </stringParam>
         
        
        
        <answerParam name="span_b" prompt="Input result B of Span Logic" readonly="true" visible="false">
              <help>Select a result set as the input B of the Span Logic operation</help>
              <recordClass ref="GeneRecordClasses.GeneRecordClass" />
              <recordClass ref="OrfRecordClasses.OrfRecordClass" excludeProjects="HostDB"/>
              <recordClass ref="SnpRecordClasses.SnpRecordClass" includeProjects="AmoebaDB,CryptoDB,PlasmoDB,ToxoDB,TriTypDB,EuPathDB" />
              <recordClass ref="IsolateRecordClasses.IsolateRecordClass" excludeProjects="FungiDB,TrichDB,HostDB" />
              <recordClass ref="DynSpanRecordClasses.DynSpanRecordClass" />
<!--              <recordClass ref="SageTagRecordClasses.SageTagRecordClass" includeProjects="GiardiaDB,PlasmoDB,ToxoDB,TriTrypDB" /> -->
        </answerParam>
        
        <enumParam name="span_begin_b" prompt="begins at">
          <help>The anchor of the begin location</help>
          <enumList>   
            <enumValue default="true">
              <term>start</term>
              <internal>start</internal>
            </enumValue>
            <enumValue>
              <term>stop</term>
              <internal>stop</internal>
            </enumValue>
          </enumList>   
        </enumParam>
        
        <enumParam name="span_end_b" prompt="ends at">
          <help>The anchor of the end location</help>
          <enumList>   
            <enumValue>
              <term>start</term>
              <internal>start</internal>
            </enumValue>
            <enumValue default="true">
              <term>stop</term>
              <internal>stop</internal>
            </enumValue>
          </enumList>   
        </enumParam>

        
        <enumParam name="span_begin_direction_b" prompt="direction">
          <help>direction from the begin location</help>
          <enumList>   
            <enumValue default="true">
              <term>+</term>
              <internal>+</internal>
            </enumValue>
            <enumValue>
              <term>-</term>
              <internal>-</internal>
            </enumValue>
          </enumList>   
        </enumParam>
        
        <enumParam name="span_end_direction_b" prompt="direction">
          <help>direction from the end location</help>
          <enumList>   
            <enumValue default="true">
              <term>+</term>
              <internal>+</internal>
            </enumValue>
            <enumValue>
              <term>-</term>
              <internal>-</internal>
            </enumValue>
          </enumList>   
        </enumParam>


        <stringParam name="span_begin_offset_b"
                     prompt="begin offset" number="true">
            <help>The offset from the begin</help>
            <suggest default="0"/>
        </stringParam>

        <stringParam name="span_end_offset_b"
                     prompt="end offset" number="true">
            <help>The offset from the begin</help>
            <suggest default="0"/>
        </stringParam>

        
    <answerParam name="span_result"
                  prompt="Input Result Set"
                  readonly="true"
                  visible="false">
        <recordClass ref="DynSpanRecordClasses.DynSpanRecordClass" />
    </answerParam>

           
    <enumParam name="sequence_strand" 
                                        prompt="Select strand"
                                        multiPick="false">
          <help>Select the strand where the genomic segment is located.</help>
          <enumList>   
            <enumValue default="true">
              <display>Forward</display>
              <term>f</term>
              <internal>f</internal>
            </enumValue>
            <enumValue>
              <display>Reversed</display> 
              <term>r</term>
              <internal>r</internal>
            </enumValue>
          </enumList>   
    </enumParam>
 
 </paramSet>

</wdkModel>
