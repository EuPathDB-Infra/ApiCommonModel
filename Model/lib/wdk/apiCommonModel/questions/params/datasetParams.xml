<wdkModel>

  <paramSet name="datasetParams">
        <stringParam name="reference_name"
                     prompt="Reference name"
                     number="false">
            <help>The internal full name of a WDK question</help>
        </stringParam>

        <stringParam name="question_name"
                     prompt="Question name"
                     number="false">
            <help>The internal full name of a WDK question</help>
        </stringParam>

        <stringParam name="record_class"
                     prompt="Record class"
                     number="false">
            <help>The internal full name of a WDK record</help>
        </stringParam>

        <stringParam name="organism"
                     prompt="Organism"
                     number="false">
            <help>The organsim name, in the form used in the resources xml files </help>
        </stringParam>
        
        <flatVocabParam name="external_db_name"
                     queryRef="datasetVQ.extDbNames"
                     prompt="Data set INTERNAL name"
                     multiPick="true">
                     <help>
                     The comma delimited list of data set names
                     </help>    
        </flatVocabParam>

  </paramSet>

    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->
    <!--  Vocab queries-->  
    <!--++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++-->

 <querySet name="datasetVQ" queryType="vocab">
   <sqlQuery name="extDbNames" excludeProjects="EuPathDB">
            <column name="internal"/>
            <column name="term"/>
            <sql>
         <![CDATA[
                  select distinct name as term, name as internal from apidb.dataset
         ]]>
            </sql>
   </sqlQuery>

   <processQuery name="datesetNames" processName="org.apidb.apicomplexa.wsfplugin.apifed.ApiFedPlugin" includeProjects="EuPathDB">
            <wsColumn name="internal" width="200"/>
            <wsColumn name="term" width="200"/>
   </processQuery>
  </querySet>    

</wdkModel>
