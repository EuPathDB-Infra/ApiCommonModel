#!/usr/bin/perl

use strict;

use XML::Simple;

use File::Basename;
use Cwd;

use DBI;
use DBD::Oracle;

use Getopt::Long qw(GetOptions);

use Data::Dumper;

use ApiCommonData::Load::TuningConfig::Utils;


my ($help, $tabFile, $commit, $propfile, $instance, $schema, $password, $suffix, $subversionDir, $debug);

$commit = 0;

GetOptions("propfile=s" => \$propfile,
           "instance=s" => \$instance,
           "schema=s" => \$schema,
           "password=s" => \$password,
           "suffix=s" => \$suffix,
           "subversionDir=s" => \$subversionDir,
           "debug!" => \$debug,
           "help|h" => \$help,
           "tabFile=s" => \$tabFile,
           "databaseInstance=s" => \$databaseInstance,
           "userName=s" => \$userName,
           "password=s" => \$password,
           "commit=i" =>  \$commit,
          );

($instance, $schema, $password) = ApiCommonData::Load::TuningConfig::Utils::getDbLoginInfo($instance, $propfile, $schema, $password);

&run();

sub run{
  my $dir=getcwd();
  my $tabFileLocation = $dir."/".$tabFile;
  
  unless(-e $tabFileLocation) {
    &usage("ERROR:  tabFile is not in this directory");
  }
  
  if($help) {
    &usage();
  }

  my $failures = 0;

my $dbh = ApiCommonData::Load::TuningConfig::Utils::getDbHandle($instance, $schema, $password);

  $dbh->{RaiseError} = 1;
  $dbh->{AutoCommit} = 0;
  
  # parse Tab file
  
  my @massSpecRows = ();
  open (FILE, $tabFileLocation);
  while (<FILE>) {
    chomp;
    (my $project_id, my $experiment, my $organism, my $sample, my $ext_db_name, ) = split("\t");
    if ($ext_db_name) {
      push(@massSpecRows, {project_id => $project_id,
                           experiment => $experiment,
                           organism => $organism,
                           sample => $sample,
                           ext_db_name => $ext_db_name,
                          }
          );
    }
  }

    close (FILE);
  createEmptyTable($dbh,$suffix);

  print Dumper @massSpecRows;
  foreach my $row(@massSpecRows) {
    my $project_id  = $row->{project_id};
    my $experiment  = $row->{experiment};
    my $organism    = $row->{organism};
    my $sample      = $row->{sample};
    my $ext_db_name = $row->{ext_db_name};
    print Dumper $row;
    my $insertStatement = "INSERT INTO jcade.MassSpecTerms(project_id,
                            experiment,organism,sample,ext_db_name) VALUES ('$project_id','$experiment','$organism','$sample','$ext_db_name')";
    print STDERR $insertStatement;
    my $insertRow = $dbh->prepare($insertStatement);
    $insertRow->execute();
  }
  if ($commit){
    $dbh->commit();
  }
  else {
    $dbh->rollback();
  }
  $dbh->disconnect();
}
sub createEmptyTable {
     my ($dbh, $suffix) = @_;

    $dbh->do(<<SQL) or die "creating table";
     create table MassSpecTerms$suffix (
	project_id   varchar2(9),
        experiment   varchar2(255),
	organism     varchar2(255),
	sample       varchar2(129),
	ext_db_name  varchar2(81)
  ) nologging
SQL
$dbh->{PrintError} = 0;
  $createTable->execute();
}

  sub usage {
    my $e = shift;
    if($e) {
      print STDERR $e . "\n";
    }
    print STDERR "usage:  createMassSpecTerms.pl --tabFile <fileName> --databaseInstance <instance> --userName <userName> --password <password>";
    exit;
  }


1;
